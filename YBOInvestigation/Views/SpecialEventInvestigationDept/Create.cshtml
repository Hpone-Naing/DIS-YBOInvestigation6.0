@model YBOInvestigation.Models.SpecialEventInvestigationDept 

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Create";
}
<div id="spinner-container">
    <img id="spinner" decoding="async" src="~/image/loading/spinner.gif" asp-append-version="true" />
</div>


<div class="d-flex justify-content-center align-item-center pb-2">
    <label class="text-primary h4"> ထူးခြားဖြစ်စဥ်</label>
</div>
@if (TempData.ContainsKey("Message") && TempData.ContainsKey("CssColor"))
{
    <div class="alert @TempData["CssColor"]"> @TempData["Message"] </div>
}


<div style="background-color: royalblue;" class="row border border-dark">

    <div class="d-flex justify-content-center align-item-center p-1">
        <label class="text-white"> စာရင်းသွင်းရန် </label>
    </div>
</div>

<form id="form" asp-action="Create">
    <div class="row mt-1 border border-dark" style="border-radius: 20px;background-color: #cedbef;">
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mt-2">
                <label asp-for="IncidenceDate" class="control-label"></label>
                <input asp-for="IncidenceDate" class="form-control"  />
                <span asp-validation-for="IncidenceDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="IncidencePlace" class="control-label"></label>
                <input asp-for="IncidencePlace" class="form-control"  />
                <span asp-validation-for="IncidencePlace" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="VehicleNumber" class="control-label"></label>
                <input asp-for="VehicleNumber" class="form-control" value="@ViewBag.VehicleNumber" readonly />
                <span asp-validation-for="VehicleNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="DriverName" class="control-label"></label><span id="driverNameLbl" class="text-primary" style="display:none;">အသစ်ထည့်ပါ</span>
                <div class="row">
                    <div id="lstDriverNameDiv" class="col-10">
                        <select list="datas" id="lstDriverName" name="selectedDriverName" class="form-control" onchange="FillDriverLicenseByDriverId(this, 'driverLicense', 'driverIdNumber', '', 'SpecialEventInvestigationDept');">
                            <option value="0" selected>စီစစ်ဆဲ</option>
                            @foreach (var i in ViewBag.AutoComplete)
                            {
                                var selected = (ViewBag.ChooseDriver != null && ViewBag.ChooseDriver.DriverPkid == i.DriverPkId) ? "selected=\"selected\"" : "";
                                @Html.Raw($"<option value=\"{i.DriverPkId}\" {selected}>{i.DriverName}</option>")
                            }
                        </select>
                        <span asp-validation-for="DriverName" class="text-danger"></span>

                    </div>
                    <div id="newDriverDiv" class="col-10" style="display:none;">
                        <input id="newDriverName" class="form-control" name="newDriverName" />
                    </div>
                    <div id="add" class="col" style="cursor:pointer;">
                        <i class="fas fa-plus-circle"></i>
                    </div>
                    <div id="remove" class="col" style="cursor:pointer;display:none;">
                        <i class="fa-solid fa-xmark"></i>
                    </div>
                </div>
                <span asp-validation-for="DriverName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="YBSTypePkid" class="control-label"></label>
                <input type="hidden" asp-for="YBSTypePkid" value="@ViewBag.YBSType.YBSTypePkid" />
                <input asp-for="YBSTypePkid" type="text" class="form-control" value="@ViewBag.YBSType.YBSTypeName" readonly />
                <span asp-validation-for="YBSTypePkid" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="VehicleNumber" class="control-label"></label>
                <input asp-for="VehicleNumber" class="form-control" value="@ViewBag.VehicleNumber" readonly />
                <span asp-validation-for="VehicleNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="YBSCompanyPkid" class="control-label"></label>
                <input type="hidden" asp-for="YBSCompanyPkid" value="@ViewBag.YBSCompany.YBSCompanyPkid" />
                <input asp-for="YBSCompanyPkid" type="text" class="form-control" value="@ViewBag.YBSCompany.YBSCompanyName" readonly />
                <span asp-validation-for="YBSCompanyPkid" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="IDNumber" class="control-label"></label>
                <input asp-for="IDNumber" id="driverIdNumber" class="form-control" value="@(ViewBag.ChooseDriver != null ? ViewBag.ChooseDriver.IDNumber : "")" readonly />
                <span asp-validation-for="IDNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="form-group mt-2">
                <label asp-for="IncidenceTime" class="control-label"></label>
                <input asp-for="IncidenceTime" class="form-control"  />
                <span asp-validation-for="IncidenceTime" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ReportTime" class="control-label"></label>
                <input asp-for="ReportTime" class="form-control"  />
                <span asp-validation-for="ReportTime" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="YbsRecordSender" class="control-label"></label>
                <input asp-for="YbsRecordSender" class="form-control" />
                <span asp-validation-for="YbsRecordSender" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="YbsRecordSenderPosition" class="control-label"></label>
                <input asp-for="YbsRecordSenderPosition" class="form-control"  />
                <span asp-validation-for="YbsRecordSenderPosition" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="DriverLicense" class="control-label"></label><span id="driverLicenseLbl" class="text-primary" style="display:none;">အသစ်ထည့်ပါ</span>
                <input id="driverLicense" asp-for="DriverLicense" class="form-control" value="@(ViewBag.ChooseDriver != null ? ViewBag.ChooseDriver.DriverLicense : "")" readonly />
                <span asp-validation-for="DriverLicense" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ActionResponse" class="control-label"></label>
                <input asp-for="ActionResponse" class="form-control" />
                <span asp-validation-for="ActionResponse" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Review" class="control-label"></label>
                <input asp-for="Review" class="form-control" />
                <span asp-validation-for="Review" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-2">
            <label asp-for="RecordDescription" class="control-label"></label>
            <textarea asp-for="RecordDescription" class="form-control" ></textarea>
            <span asp-validation-for="RecordDescription" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center align-item-center mt-3 mb-2">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
