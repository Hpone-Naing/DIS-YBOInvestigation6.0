@model YBOInvestigation.Models.SpecialEventInvestigationDept

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Details";
}

<div id="spinner-container">
    <img id="spinner" decoding="async" src="~/image/loading/spinner.gif" asp-append-version="true" />
</div>

<div class="d-flex justify-content-center align-item-center pb-2">
    <label class="text-primary h4"> ထူးခြားဖြစ်စဥ်</label>
</div>

<div style="background-color: royalblue;" class="row border border-dark">
    <div class="d-flex justify-content-center align-item-center p-1">
        <label class="text-white"> အသေးစိတ် </label>
    </div>
</div>

<div class="row mt-1 border border-dark" style="border-radius: 20px;background-color: #cedbef;">
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="row p-3" style="background-color: #c0c0c052;">
            <label asp-for="IncidenceDate" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.IncidenceDate
            </div>
        </div>
        <div class="row p-3">
            <label asp-for="IncidenceTime" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.IncidenceTime
            </div>
        </div>
        <div class="row p-3" style="background-color: #c0c0c052;">
            <label asp-for="IncidencePlace" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.IncidencePlace
            </div>
        </div>
        <div class="row p-3">
            <label asp-for="YBSCompany" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.YBSCompany.YBSCompanyName
            </div>
        </div>
        <div class="row p-3" style="background-color: #c0c0c052;">
            <label asp-for="Driver.DriverName" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.Driver.DriverName
            </div>
        </div>
        <div class="row p-3">
            <label asp-for="Driver.IDNumber" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.Driver.IDNumber
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="row p-3" style="background-color: #c0c0c052;">
            <label asp-for="ReportTime" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.ReportTime
            </div>
        </div>
        <div class="row p-3">
            <label asp-for="YbsRecordSender" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.YbsRecordSender
            </div>
        </div>
        <div class="row p-3" style="background-color: #c0c0c052;">
            <label asp-for="YbsRecordSenderPosition" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.YbsRecordSenderPosition
            </div>
        </div>
        <div class="row p-3">
            <label asp-for="YBSType" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.YBSType.YBSTypeName
            </div>
        </div>
        <div class="row p-3" style="background-color: #c0c0c052;">
            <label asp-for="Driver.DriverLicense" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.Driver.DriverLicense
            </div>
        </div>
        <div class="row p-3">
            <label asp-for="@Model.Driver.VehicleData.VehicleNumber" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.Driver.VehicleData.VehicleNumber
            </div>
        </div>
    </div>
    <div class="col">
        <div class="row p-2">
            <label asp-for="RecordDescription" class="fw-bold col-lg-3 col-md-3 col-sm-4 control-label"></label>
            <div class="col-lg-9 col-md-9 col-sm-8">
                @Model.RecordDescription
            </div>
        </div>
    </div>
</div>

