@model YBOInvestigation.Models.YBSDriverCourseDelivery

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Edit";
}

<div id="spinner-container">
    <img id="spinner" decoding="async" src="~/image/loading/spinner.gif" asp-append-version="true" />
</div>

<div class="d-flex justify-content-center align-item-center pb-4">
    <label class="text-primary h4"> YBSယာဥ်မောင်းများအား သင်တန်းပေးမှုမှတ်တမ်း </label>
</div>

<div style="background-color: #e1e135ed;" class="row mt-3 border border-dark">
    <div class="d-flex justify-content-center align-item-center p-1">
        <label class="text-black"> စည်းကမ်းဖောက်ဖျက်သည့် YBSယာဥ်မောင်းများအား အသိပညာပေးသင်တန်း </label>
    </div>
</div>

<div class="row mt-1 border border-dark">
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="row p-2" style="background-color: #c0c0c052;">
            <label asp-for="EventDate" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.EventDate
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="row p-2" style="background-color: #c0c0c052;">
            <label asp-for="TotalRecord" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.TotalRecord
            </div>
        </div>
    </div>
</div>

<div style="background-color: #e1e135ed;" class="row mt-3 border border-dark">
    <div class="d-flex justify-content-center align-item-center p-1">
        <label class="text-black"> YBS Company အချက်အလက်စာရင်း </label>
    </div>
</div>
<div class="row mt-1 border border-dark p-2">
    <label asp-for="YBSCompany" class="fw-bold col-lg-3 col-md-3 col-sm-4 control-label"></label>
    <div class="col-lg-6 col-md-6 col-sm-8">
        @Model.YBSCompany.YBSCompanyName
    </div>
</div>

<div style="background-color: #e1e135ed;" class="row mt-3 border border-dark">
    <div class="d-flex justify-content-center align-item-center p-1">
        <label class="text-black"> ယာဥ်အမျိုးအမည် အချက်အလက်စာရင်း </label>
    </div>
</div>
<div class="row mt-1 border border-dark p-2">
    <label asp-for="YBSType" class="fw-bold col-lg-3 col-md-3 col-sm-4 control-label"></label>
    <div class="col-lg-6 col-md-6 col-sm-8">
        @Model.YBSType.YBSTypeName
    </div>
</div>

<div style="background-color: #e1e135ed;" class="row mt-3 border border-dark">
    <div class="d-flex justify-content-center align-item-center p-1">
        <label class="text-black"> သင်တန်းသား အချက်အလက်စာရင်း </label>
    </div>
</div>
<div class="row mt-1 border border-dark p-2">
    <label asp-for="TrainedYBSDriverInfo.Driver.DriverName" class="fw-bold col-lg-3 col-md-3 col-sm-4 control-label"></label>
    <div class="col-lg-6 col-md-6 col-sm-8">
        @Model.TrainedYBSDriverInfo.Driver.DriverName
    </div>
</div>
<div class="row mt-1 border border-dark p-2">
    <label asp-for="TrainedYBSDriverInfo.Age" class="fw-bold col-lg-3 col-md-3 col-sm-4 control-label"></label>
    <div class="col-lg-6 col-md-6 col-sm-8">
        @Model.TrainedYBSDriverInfo.Age
    </div>
</div>
<div class="row mt-1 border border-dark p-2">
    <label asp-for="TrainedYBSDriverInfo.FatherName" class="fw-bold col-lg-3 col-md-3 col-sm-4 control-label"></label>
    <div class="col-lg-6 col-md-6 col-sm-8">
        @Model.TrainedYBSDriverInfo.FatherName
    </div>
</div>
<div class="row mt-1 border border-dark p-2">
    <label asp-for="TrainedYBSDriverInfo.EducationLevel" class="fw-bold col-lg-3 col-md-3 col-sm-4 control-label"></label>
    <div class="col-lg-6 col-md-6 col-sm-8">
        @Model.TrainedYBSDriverInfo.EducationLevel
    </div>
</div>
<div class="row mt-1 border border-dark p-2">
    <label asp-for="TrainedYBSDriverInfo.Address" class="fw-bold col-lg-3 col-md-3 col-sm-4 control-label"></label>
    <div class="col-lg-6 col-md-6 col-sm-8">
        @Model.TrainedYBSDriverInfo.Address
    </div>
</div>
<div class="row mt-1 border border-dark p-2">
    <label asp-for="TrainedYBSDriverInfo.Phone" class="fw-bold col-lg-3 col-md-3 col-sm-4 control-label"></label>
    <div class="col-lg-6 col-md-6 col-sm-8">
        @Model.TrainedYBSDriverInfo.Phone
    </div>
</div>
<div class="row mt-1 border border-dark p-2">
    <label asp-for="@Model.TrainedYBSDriverInfo.Driver.VehicleData.VehicleNumber" class="fw-bold col-lg-3 col-md-3 col-sm-4 control-label"></label>
    <div class="col-lg-6 col-md-6 col-sm-8">
        @Model.TrainedYBSDriverInfo.Driver.VehicleData.VehicleNumber
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
