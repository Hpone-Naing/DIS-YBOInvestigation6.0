@model YBOInvestigation.Models.YBSDriverCourseDelivery

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Edit";
}

<div id="spinner-container">
    <img id="spinner" decoding="async" src="~/image/loading/spinner.gif" asp-append-version="true" />
</div>

<div class="d-flex justify-content-center align-item-center pb-2">
    <label class="text-primary h4"> သင်တန်းပေးမှုမှတ်တမ်း </label>
</div>

<div style="background-color: royalblue;" class="row border border-dark">
    <div class="d-flex justify-content-center align-item-center p-1">
        <label class="text-white"> အသေးစိတ်  </label>
    </div>
</div>

<div class="row mt-1 border border-dark" style="border-radius: 20px;background-color: #cedbef;">
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="row p-3" style="background-color: #c0c0c052;">
            <label asp-for="EventDate" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.EventDate
            </div>
        </div>
        <div class="row p-3">
            <label asp-for="YBSCompany" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.YBSCompany.YBSCompanyName
            </div>
        </div>
        <div class="row p-3" style="background-color: #c0c0c052;">
            <label asp-for="TrainedYBSDriverInfo.Driver.DriverName" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.TrainedYBSDriverInfo.Driver.DriverName
            </div>
        </div>
        <div class="row p-3">
            <label asp-for="TrainedYBSDriverInfo.Age" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.TrainedYBSDriverInfo.Age
            </div>
        </div>
        <div class="row p-3" style="background-color: #c0c0c052;">
            <label asp-for="TrainedYBSDriverInfo.EducationLevel" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.TrainedYBSDriverInfo.EducationLevel
            </div>
        </div>
        
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="row p-3">
            <label asp-for="TrainedYBSDriverInfo.Phone" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.TrainedYBSDriverInfo.Phone
            </div>
        </div>
        <div class="row p-3">
            <label asp-for="YBSType" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.YBSType.YBSTypeName
            </div>
        </div>
        <div class="row p-3" style="background-color: #c0c0c052;">
            <label asp-for="@Model.TrainedYBSDriverInfo.Driver.VehicleData.VehicleNumber" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.TrainedYBSDriverInfo.Driver.VehicleData.VehicleNumber
            </div>
        </div>
        <div class="row  p-3">
            <label asp-for="TrainedYBSDriverInfo.FatherName" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.TrainedYBSDriverInfo.FatherName
            </div>
        </div>
        <div class="row p-3" style="background-color: #c0c0c052;">
            <label asp-for="TrainedYBSDriverInfo.Address" class="fw-bold col-lg-6 col-md-6 col-sm-4 control-label"></label>
            <div class="col-lg-6 col-md-6 col-sm-8">
                @Model.TrainedYBSDriverInfo.Address
            </div>
        </div>
    </div>
</div>

